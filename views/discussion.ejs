<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class=" container-fluid network-image" style=" padding:5rem 15% 0% 15%; margin:0;">
  <img src="/images/1.PNG" class="network" alt="" style=" width : 8rem; height:auto;">
  <p class="des-head" style=" font-size:2.5rem; ">DISCUSSION</p>
</div>

<div class="sortings">
  <form class="" action="/discussion" method="post">
    <input type="text" name="sortType" list="sorting" placeholder="Sort By">
    <datalist id="sorting">
      <option value="Most Viewed">
      <option value="Most Liked">
        <option value="Most Answered">
          <option value="Most Recent">
    </datalist
    <div class="" style="s">
      <button class="btn btn-outline-warning navbtn btn-sm shadow-none" type="submit">Sort</button>
    </div>

  </form>

</div>



<%  for(var i=questions.length-1;i>=0;i--){ %>
<div class="query-box">
  <img src="/images/profile.png" alt="">
  <div class="" style=" display:inline-block; margin:0; padding:0;">
    <a href=<%= "/profile/"+questions[i].postedBy._id %>>
      <p class="name"><%=questions[i].postedBy.name %></p>
    </a>
    <p class="branch"><%=questions[i].postedBy.college +" "+questions[i].postedBy.branch%></p>
  </div>
  <p class="quest"><%=questions[i].quest %></p>
  <div class="row">
    <div class="col-sm-4">

        <a href=<%="/likes/"+questions[i]._id%> style="color:black;">
          <p class="action">Like</p>
          <i class="fas fa-thumbs-up action"></i>
          <p class="action number"><%=questions[i].likes%></p>
        </a>


    </div>
    <div class="col-sm-4">
      <p class="action">Views</p>
      <i class="fas fa-eye action"></i>
      <p class="action number"><%=questions[i].views%></p>
    </div>
    <div class="col-sm-4">
      <a href=<%= "/answers/"+questions[i]._id %> style="color:black;" >
        <p class="action">Answers</p>
        <i class="far fa-comment action"></i>
      </a>

      <p class="action number"><%=questions[i].answer.length%></p>
    </div>

  </div>
</div>
<% } %>








