<%- include('partials/header') %>

<!-- NAVBAR -->
<%- include('partials/navbar') %>

<!-- login form -->
<div
  class="container-fluid network-image"
  style="padding: 5rem 15% 0% 15%; margin-bottom: 3%"
>
  <img
    src="images/3.PNG"
    class="network"
    alt=""
    style="width: 8rem; height: auto"
  />
  <p class="des-head" style="font-size: 2.5rem">ConnectIn</p>
</div>

<div class="signup-form">
  <form action="/login" method="post">
    <h2>Login</h2>

    <div class="form-group">
      <input
        type="email"
        class="form-control shadow-none"
        name="username"
        placeholder="Email"
        required="required"
      />
    </div>
    <div class="form-group">
      <input
        type="password"
        class="form-control shadow-none"
        name="password"
        placeholder="Password"
        required="required"
      />
    </div>

    <div class="form-group">
      <button
        type="submit"
        class="btn btn-waroning btn-lg btn-block shadow-none submit"
      >
        Login
      </button>
    </div>
  </form>
</div>

<%- include('partials/footer') %>
