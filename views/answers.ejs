<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="query-box" style=" margin-top:5rem; margin-bottom:1%; ">
  <img src="/images/profile.png" alt="">
  <div class="" style=" display:inline-block; margin:0; padding:0;">
    <a href=<%= "/profile/"+question.postedBy._id %>>
      <p class="name"><%=question.postedBy.name %></p>
    </a>

    <p class="branch"><%=question.postedBy.college+" "+question.postedBy.branch%></p>
  </div>
  <p class="quest"><%=question.quest %></p>
  <div class="row">
    <div class="col-sm-4" >
      <a href=<%="/likes/"+question._id%> style="color:black;">
        <p class="action">Like</p>
        <i class="fas fa-thumbs-up action"></i>
        <p class="action number"><%=question.likes%></p>
      </a>

    </div>
    <div class="col-sm-4">
      <p class="action">Views</p>
      <i class="fas fa-eye action"></i>
      <p class="action number"><%=question.views%></p>
    </div>


  </div>
</div>

<div class="container-fluid ask-div" ;>
<form class="" action=<%="/answers/"+question._id%> method="post">
  <div class="form-group" style="margin-bottom: 0.5rem;">
     <label for="exampleFormControlTextarea1" class="ask">Have Answer?</label>
     <textarea class="form-control" placeholder="Type your Answer here" name="ans" id="exampleFormControlTextarea1" style="height:100px;" ></textarea>
  </div>
  <button type="submit" class="btn btn-warning askbtn shadow-none">Answer</button>

</form>
</div>



<div >

  <% for(var i=0;i<question.answer.length;i++){ %>
    <div class="answer-box" style=" background-color:#f4f9f9;">
      <a href=<%= "/profile/"+question.postedBy._id %>>
        <p style=" font-size:1.75rem;font-weight:600;margin:0;color:black;"><%=question.answer[i].name %></p>
      </a>

      <p style="font-size: 1.5rem; margin:0;"><%=question.answer[i].answer %></p>
    </div>
<%  } %>

</div>
<%- include('partials/footer') %>
